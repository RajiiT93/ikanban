{% extends 'base.html.twig' %}

{% block title %}Mes Projets{% endblock %}

{% block body %}
<div class="d-flex">
    <!-- SIDEBAR STYLE TRELLO -->
    <nav id="sidebar" class="bg-light border-end p-4 vh-100">
        <h4 class="text-center mb-4">üìã Tableau</h4>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link fw-semibold" href="#projets-crees">üìå Projets cr√©√©s</a>
            </li>
            <li class="nav-item">
                <a class="nav-link fw-semibold" href="#projets-invites">ü§ù Projets invit√©s</a>
            </li>
            <li class="nav-item mt-3">
                <a class="btn btn-success w-100 fw-bold" href="{{ path('projet_new') }}">
                    ‚ûï Nouveau projet
                </a>
            </li>
            <li class="nav-item mt-5">
                <a class="nav-link text-danger fw-semibold" href="{{ path('logout') }}">
                    üö™ D√©connexion
                </a>
            </li>
        </ul>
    </nav>

    <!-- CONTENU PRINCIPAL -->
    <main class="flex-grow-1 p-5 bg-light">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <!-- PROJETS CR√â√âS -->
        <section id="projets-crees">
            <h2 class="text-primary mb-3">üìå Projets cr√©√©s</h2>
            {% if projetsCrees is not empty %}
                <div class="row">
                    {% for projet in projetsCrees %}
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-sm h-100">
                                <div class="card-body">
                                    <h5 class="card-title">{{ projet.nom }}</h5>
                                    <p class="card-text">{{ projet.description|default('Pas de description') }}</p>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            üìÖ Deadline :
                                            {{ projet.deadline ? projet.deadline|date('d/m/Y') : 'Aucune' }}
                                        </small>
                                    </p>
                                    <div class="d-flex justify-content-between mt-3">
                                        <a href="{{ path('projet_edit', {'id': projet.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                        <a href="{{ path('projet_show', {'id': projet.id}) }}" class="btn btn-primary btn-sm">Voir</a>
                                        <form method="post" action="{{ path('projet_delete', {'id': projet.id}) }}" onsubmit="return confirm('Supprimer ce projet ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ projet.id) }}">
                                            <button class="btn btn-danger btn-sm">Supprimer</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-muted">Aucun projet cr√©√©.</p>
            {% endif %}
        </section>

        <!-- PROJETS INVIT√âS -->
        <section id="projets-invites" class="mt-5">
            <h2 class="text-info mb-3">ü§ù Projets invit√©s</h2>
            {% if projetsInvites is not empty %}
                <div class="row">
                    {% for projet in projetsInvites %}
                        <div class="col-md-4 mb-4">
                            <div class="card border-info shadow-sm h-100">
                                <div class="card-body">
                                    <h5 class="card-title">{{ projet.nom }}</h5>
                                    <p class="card-text">{{ projet.description|default('Pas de description') }}</p>
                                    <p class="card-text">
                                        <small class="text-muted">Chef de projet : {{ projet.utilisateur.email }}</small>
                                    </p>
                                    <div class="text-center mt-3">
                                        <a href="{{ path('projet_show', {'id': projet.id}) }}" class="btn btn-primary btn-sm">Voir</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-muted">Aucun projet o√π tu es invit√©.</p>
            {% endif %}
        </section>

        <!-- ACTIVIT√â R√âCENTE -->
        <section class="mt-5">
            <hr>
            <h2 class="text-secondary">üïì Activit√© r√©cente</h2>
            {% if activites is defined and activites is not empty %}
                <ul class="list-group mt-3">
                    {% for activite in activites %}
                        {% set icone = 'üìå' %}
                        {% if 'Cr√©ation' in activite.typeAction %}
                            {% set icone = 'üü¢' %}
                        {% elseif 'Modification' in activite.typeAction %}
                            {% set icone = '‚úèÔ∏è' %}
                        {% elseif 'Suppression' in activite.typeAction %}
                            {% set icone = 'üóëÔ∏è' %}
                        {% elseif 'Ajout' in activite.typeAction %}
                            {% set icone = '‚ûï' %}
                        {% endif %}
                        <li class="list-group-item">
                            <strong>{{ icone }} {{ activite.typeAction }}</strong><br>
                            <small class="text-muted">
                                Par {{ activite.utilisateur.email }} le {{ activite.dateAction|date('d/m/Y H:i') }}
                            </small>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="text-muted">Aucune activit√© enregistr√©e.</p>
            {% endif %}
        </section>
    </main>
</div>
{% endblock %}

{% block stylesheets %}
<style>
    #sidebar {
        width: 250px;
        min-height: 100vh;
        position: sticky;
        top: 0;
    }

    #sidebar .nav-link {
        font-size: 1rem;
        color: #333;
    }

    #sidebar .nav-link:hover,
    #sidebar .nav-link.active {
        background-color: #007bff;
        color: white;
    }

    main {
        background-color: #f8f9fa;
    }

    .btn-sm {
        padding: 6px 12px;
    }

    .list-group-item {
        font-size: 0.95rem;
    }

    .card {
        transition: transform 0.2s ease-in-out;
    }

    .card:hover {
        transform: translateY(-3px);
    }
</style>
{% endblock %}
