{% extends 'base.html.twig' %}

{% block title %}Modifier Projet{% endblock %}

{% block monTitre %}
    ‚úèÔ∏è Modifier le projet {{ projet.nom }}
{% endblock %}

{% block body %}
<div class="container mt-5">
    

    {{ form_start(form) }}

        {{ form_row(form.nom, {'attr': {'class': 'form-control mb-4'}}) }}
        {{ form_row(form.description, {'attr': {'class': 'form-control mb-4'}}) }}
        {{ form_row(form.statut, {'attr': {'class': 'form-select mb-4'}}) }}
        {{ form_row(form.deadline, {'attr': {'class': 'form-control mb-4 datepicker'}}) }}

        <div class="form-group mb-4">
            <label><strong>üë• Membres invit√©s au projet</strong></label>
            <div class="checkbox-group">
                {{ form_row(form.membres) }}
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('projet_index') }}" class="btn btn-secondary">‚¨ÖÔ∏è Retour</a>
            <button type="submit" class="btn btn-warning btn-lg">üíæ Modifier</button>
        </div>
    {{ form_end(form) }}

    {% if app.user and app.user == projet.utilisateur %}
        <div class="text-center mt-4">
            <form method="post" action="{{ path('projet_delete', {'id': projet.id}) }}" onsubmit="return confirm('Es-tu s√ªr de vouloir supprimer ce projet ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ projet.id) }}">
                <button class="btn btn-danger">üóëÔ∏è Supprimer ce projet</button>
            </form>
        </div>
    {% endif %}
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .checkbox-group label {
            display: block;
            padding: 10px 14px;
            border: 1px solid #ccc;
            border-radius: 6px;
            background-color: #f8f9fa;
            margin-bottom: 10px;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .checkbox-group label:hover {
            background-color: #e2e6ea;
        }

        .checkbox-group input[type="checkbox"] {
            margin-right: 10px;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .btn-warning {
            font-weight: bold;
            text-transform: uppercase;
            border-radius: 25px;
            padding: 12px 24px;
            transition: 0.3s ease;
        }

        .btn-warning:hover {
            background-color: #e67e00;
        }

        .btn-danger {
            border-radius: 10px;
            padding: 10px 20px;
        }
    </style>
{% endblock %}
