{% extends 'base.html.twig' %}

{% block title %}Projet - {{ projet.titre }}{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mt-4">{{ projet.titre }}</h1>

    <p><strong>Créé le :</strong> {{ projet.dateCreation|date('d/m/Y') }}</p>

    <p><strong>Description :</strong> {{ projet.description }}</p>

    <a href="{{ path('app_welcome') }}" class="btn btn-primary mt-3">Retour à mes projets</a>
</div>
{% endblock %}
