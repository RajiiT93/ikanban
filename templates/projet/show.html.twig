{% extends 'base.html.twig' %}

{% block title %}Projet - {{ projet.nom }}{% endblock %}

{% block body %}
<div class="container mt-5">

    <h1 class="mb-4">{{ projet.nom }}</h1>

    <div class="mb-4">
        <p><strong>👑 Chef de projet :</strong> {{ projet.utilisateur.email }}</p>

        {% if projet.deadline %}
            <p><strong>📅 Date limite :</strong> {{ projet.deadline|date('d/m/Y') }}</p>
        {% else %}
            <p><strong>📅 Date limite :</strong> Non définie</p>
        {% endif %}

        <p><strong>📝 Description :</strong> {{ projet.description|default('Aucune description') }}</p>
    </div>

    <div class="mb-5">
        <h3 class="mb-3">🤝 Membres invités :</h3>
        {% if projet.membres|length > 0 %}
            <ul class="list-group">
                {% for membre in projet.membres %}
                    <li class="list-group-item">{{ membre.email }}</li>
                {% endfor %}
            </ul>
        {% else %}
            <p>Aucun membre invité pour ce projet.</p>
        {% endif %}
    </div>

    <div class="mb-5">
        <h3 class="mb-3">🗂️ Tâches du projet :</h3>
        {% if projet.taches is defined and projet.taches|length > 0 %}
            <ul class="list-group">
                {% for tache in projet.taches %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>{{ tache.titre }}</strong><br>
                            <small>{{ tache.statut }}</small>
                        </div>
                        {% if tache.deadline %}
                            <span class="badge bg-primary">{{ tache.deadline|date('d/m/Y') }}</span>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p>Aucune tâche encore créée pour ce projet.</p>
        {% endif %}

        <div class="mt-3">
            <a href="{{ path('tache_new', {'idProjet': projet.id}) }}" class="btn btn-primary">+ Ajouter une tâche</a>
        </div>
    </div>

    <div class="mb-5">
        <h3 class="mb-3 text-secondary">📜 Historique du projet</h3>
        {% if projet.activites is defined and projet.activites|length > 0 %}
            <ul class="list-group">
                {% for activite in projet.activites %}
                    <li class="list-group-item">
                        <strong>{{ activite.typeAction }}</strong><br>
                        <small class="text-muted">
                            par {{ activite.utilisateur.email }} — {{ activite.dateAction|date('d/m/Y H:i') }}
                        </small>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p class="text-muted">Aucune activité enregistrée pour ce projet.</p>
        {% endif %}
    </div>

    <div class="mt-5 d-flex gap-3">
        <a href="{{ path('projet_index') }}" class="btn btn-secondary">⬅️ Retour à mes projets</a>

        {% if app.user and app.user == projet.utilisateur %}
            <form method="post" action="{{ path('projet_delete', {'id': projet.id}) }}" onsubmit="return confirm('Es-tu sûr de vouloir supprimer ce projet ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ projet.id) }}">
                <button class="btn btn-danger">🗑️ Supprimer ce projet</button>
            </form>
        {% endif %}
    </div>

</div>
{% endblock %}
